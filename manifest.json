{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "version": "3.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "background",
    "unlimitedStorage",
    "https://activityfacade.payoneer.com/*"
  ],
  "web_accessible_resources": [
    "resources/*",
    "js/tr.js"
  ],
  "icons": {
    "16": "resources/icon-16.png",
    "32": "resources/icon-32.png",
    "48": "resources/icon-48.png",
    "128": "resources/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "resources/icon-19.png",
      "38": "resources/icon-38.png"
    },
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/lib/jquery.min.js",
      "js/messenger.js",
      "js/utils.js",
      "js/homemoney-utils.js",
      "js/homemoney-api.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://myaccount.payoneer.com/MainPage/Widget.aspx?w=Activity"
      ],
      "css": [
        "css/font-awesome.css",
        "css/payoneer.css"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/lib/moments.js",
        "js/messenger.js",
        "js/utils.js",
        "js/tr.js",
        "js/homemoney-utils.js",
        "js/payoneer-transactions.js"
      ]
    },
    {
      "matches": [
        "https://myaccount.payoneer.com/MainPage/PromoPage.aspx"
      ],
      "js": [
        "js/messenger.js",
        "js/payoneer-home.js"
      ]
    },
    {
      "matches": [
        "https://homemoney.ua/api/oauth/success.htm*"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/messenger.js",
        "js/homemoney-token.js"
      ]
    }
  ]
}
